<div class="d-flex align-items-center gap-4">
    <h2>Patient Details</h2>
    <a asp-controller="Patients" asp-action="Index" class="btn btn-primary btn-sm">Back to List</a>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title mb-4">@Model.Name</h5

        <p class="card-text"><strong>Active:</strong> @Model.Active</p>
        <p class="card-text"><strong>Gender:</strong> @Model.Gender</p>
        <p class="card-text"><strong>Birth Date:</strong> @Model.BirthDate</p>
        <p class="card-text"><strong>Address:</strong> @Model.Address</p>
        
    </div>
</div>