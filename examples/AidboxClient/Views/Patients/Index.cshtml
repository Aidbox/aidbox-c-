<div class="d-flex justify-content-between align-items-center">
    <h2>Patient List</h2>
    <button type="button" class="btn btn-primary btn-sm">Add patient</button>
</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Active</th>
            <th scope="col">Gender</th>
            <th scope="col">Birth Date</th>
            <th scope="col">Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (PatientItemViewModel item in @Model)
        {
            <tr>
                <td><a asp-controller="Patients" asp-action="Details"
                        asp-route-id="@item.Id">@item.Name</a></td>
                <td>@item.Active</td>
                <td>@item.Gender</td>
                <td>@item.BirthDate</td>
                <td>@item.Address</td>
            </tr>
        }
    </tbody>
</table>
